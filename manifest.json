{
  "manifest_version": 3,
  "name": "Verificador de Acessibilidade ABNT NBR 17225",
  "version": "0.0.6",
  "description": "Verifica requisitos de acessibilidade web conforme a norma ABNT NBR 17225:2025",
  "permissions": [
    "storage",
    "activeTab",
    "downloads",
    "scripting",
    "windows"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "assets/icon.png"
    }
  },
  "background": {
    "service_worker": "scripts/worker/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/utils.js",
        "scripts/content/highlight.js",
        "scripts/rules/keyboard-interaction.js",
        "scripts/rules/animations.js",
        "scripts/rules/buttons-and-controls.js",
        "scripts/rules/coding.js",
        "scripts/rules/colors-usage.js",
        "scripts/rules/forms.js",
        "scripts/rules/headings.js",
        "scripts/rules/lists.js",
        "scripts/rules/media.js",
        "scripts/rules/navigation.js",
        "scripts/rules/presentation.js",
        "scripts/rules/tables.js",
        "scripts/rules/text-content.js",
        "scripts/rules/time.js",
        "scripts/rules/regions.js",
        "scripts/rules/rules.js",
        "scripts/content/engine.js",
        "scripts/content/events.js",
        "scripts/listener/listener.js"
      ]
    }
  ]
}
